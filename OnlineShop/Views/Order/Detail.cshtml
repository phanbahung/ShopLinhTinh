@model IEnumerable<Model.ViewModel.OrderDetailViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "MB Linh tinh - Quan ly don hang";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chi tiết của đơn hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">              
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Code</th>
                                <th>Hình ảnh</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ProductName</td>
                                    <td>@item.Code</td>
                                    <td><img src="@item.Image" alt="@item.ProductName" height="42" width="42"> </td>
                                    <td>@item.Quantity</td>
                                    <td>@string.Format("{0:#,0}", item.Price)</td>
                                    <td>@string.Format("{0:#,0.00}", item.Total)</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a class="btn btn-primary" href="/don-hang">Quay lại DS đơn hàng</a>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>