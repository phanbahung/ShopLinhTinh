@model List<Model.EF.Product>
@{
    ViewBag.Title = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_NewLayout.cshtml";

}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>KẾT QUẢ TÌM KIẾM</h3>
        </div>
        <div class="sort">
            <p>
                Xếp theo:
                <select>
                    <option>Lowest Price</option>
                    <option>Highest Price</option>
                    <option>Lowest Price</option>
                    <option>Lowest Price</option>
                    <option>Lowest Price</option>
                    <option>In Stock</option>
                </select>
            </p>
        </div>
        <div class="show">
            <p>
                Show:
                <select>
                    <option>4</option>
                    <option>8</option>
                    <option>12</option>
                    <option>16</option>
                    <option>20</option>
                    <option>In Stock</option>
                </select>
            </p>
        </div>


        <div class="page-no">
            <!--Phân trang-->

            @if (ViewBag.TotalPage > 1)
            {
                var pageDisplay = (int)ViewBag.MaxPage;
                int productDisplay = (int)ViewBag.ProductDisplay;
                int totalPage = (int)ViewBag.TotalPage;
                int currentPage = (int)ViewBag.Page;

                // Create numeric links
                var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                var link = "/tim-kiem?keyword=" + ViewBag.Keyword;
                <nav>
                    <ul class="pagination">
                        @if (currentPage > ViewBag.First)
                {
                            <li><a href="@link&page=@ViewBag.First" title="Trang đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
                            <li>
                                <a href="@link&page=@ViewBag.Prev" title="Trang trước" class="prev"><i class="fa fa-angle-left"></i></a>
                            </li>
                        }

                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                {
                    if (currentPage == i)
                    {
                                <li> <a href="@link&page=@i" class="active" title="Trang @i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="@link&page=@i" title="Trang @i" class="pos">@i</a></li>
                            }
                        }

                        @if (currentPage < totalPage)
                {
                            <li><a href="@link&page=@ViewBag.Next" class="next" title="Trang sau"><i class="fa fa-angle-right"></i></a></li>
                            <li> <a href="@link&page=@ViewBag.Last" class="last" title="Trang cuối"><i class="fa fa-angle-double-right"></i></a></li>
                        }
                    </ul>
                </nav>
            }
            else
            {
                <span>Không có bản ghi nào</span>
            }
            <!-----------Hết Phân trang-->

        </div>
        <div class="clear"></div>

        <div class="section group">
            @if (Model.Count > 0)
            {
                var index = 0;
                foreach (var item in Model)
                {
                    if ((index % 4) == 0)
                    {  @Html.Raw("<div class=\"section group\">");
                    }

                    var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                    <div class="grid_1_of_4 images_1_of_4">
                        <a href="@url"><img src="@item.Image" alt="@item.Name" /></a>
                        <h2>@item.Name</h2>
                        <div class="price-details">
                            <div class="price-number">
                                <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")</span></p>
                            </div>
                            <div class="add-cart">
                                <a href="/them-gio-hang?productId=@item.ID&quantity=1" class="btn btn-default btn-md">
                                    <span class="glyphicon glyphicon-shopping-cart "></span> Thêm vào giỏ
                                </a>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>

                    if (((index + 1) % 4) == 0)
                    { @Html.Raw("</div>");
                    }
                    index++;
                }

            }
            else
            {
                <span>Không có bản ghi nào</span>
            }


        </div>
    </div>
</div>
