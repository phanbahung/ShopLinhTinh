
<!DOCTYPE HTML>
<html>
<head>

    <title>@ViewBag.Title</title>  
    <meta name="description" content="@ViewBag.Descriptions" />
    <meta name="keywords" content="@ViewBag.Keywords" />

    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
       

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Assets/newlayout/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Assets/newlayout/css/menu.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/Assets/newlayout/js/jquery.min.js"></script>
    <script src="~/Assets/newlayout/js/script.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Assets/newlayout/js/move-top.js"></script>
    <script type="text/javascript" src="~/Assets/newlayout/js/easing.js"></script>
    <link href='//fonts.googleapis.com/css?family=Monda' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Doppio+One' rel='stylesheet' type='text/css'>
    <link href="/assets/client/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/assets/newlayout/css/mystyle.css" rel="stylesheet" type="text/css" media="all" />

</head>
<body>

    <div class="wrap">
        <div class="header">
            <div class="header_top">
                <div class="logo">
                    <a href="index.html"><img src="~/Assets/newlayout/images/logo.png" alt="" /></a>
                </div>
                <div class="header_top_right">
                    <div class="search_box">
                        <form action="/tim-kiem" method="get">
                            <input type="text" id="txtKeyword" name="keyword" placeholder="Bạn tìm gì..."><input type="submit" value="TÌM KIẾM">
                        </form>
                    </div>

                    <div class="shopping_cart">                                              
                        <div class="cart">
                            <a href="/gio-hang" title="Xem giỏ hàng của tôi" rel="nofollow">
                                <strong class="opencart"> </strong>
                                <span class="cart_title">Xem Giỏ hàng</span>
                                <span class="no_product"></span>
                            </a>
                        </div>
                    </div>

                    <div class="login">
                        @{
                            var session = (UserLogin)Session[OnlineShop.Common.CommonConstants.USER_SESSION];
                        }
                        @if (session == null)
                          {
                              <div>
                                <a href = "/dang-nhap">Đăng nhập</a>                               
                            </div>
                          }
                        else
                        {
                            <div class="dropdown">                                   
                               <button class="btn btn-default glyphicon glyphicon-user my-btn-respon" type="button" data-toggle="dropdown">
                                    Chào @session.UserName!
                               </button>    
                                <ul class="dropdown-menu">
                                    <li><a href="/don-hang"><i class="fa fa-gear fa-fw"></i> Quản lý đơn hàng/ đặt phòng</a></li>
                                    <li><a href="/doi-mat-khau"><i class="fa fa-gear fa-fw"></i> Đổi mật khẩu</a></li>
                                    <li><a href="/tai-khoan"><i class="fa fa-user fa-fw"></i> Thông tin tài khoản</a></li>
                                    <li class="divider"></li>
                                    <li><a href="@Url.Action("Logout", "User")"><i class="fa fa-sign-out fa-fw"></i> Đăng xuất</a></li>                                    
                                </ul>
                            </div>
                        }
                    </div>

                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="h_menu">
                @{ Html.RenderAction("MainMenu", "Home");}
            </div>
            <div class="header_bottom">

                @RenderSection("NoiBatSlide", required: false)

            </div>
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div class="wrapper">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Thông tin liên hệ</h4>
                    <ul>
                        <li><span>Điện thoại:</span></li>
                        <li><span>Email</span></li>                        
                        <li><a href="muabanlinhtinh.com"><span>muabanlinhtinh.com</span></a></li>
                    </ul>
                </div>               
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Tài khoản</h4>
                    <ul>
                        <li><a href="/dang-nhap">Đăng nhập</a></li>
                        <li><a href="/dang-ky">Đăng ký</a></li>                        
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Thanh toán</h4>
                    <ul>
                        <li><a href="/lien-he">Hướng dẫn thanh toán</a></li>                        
                    </ul>
                    </div>
                </div>
            </div>
            <div class="copy_right">
                <p><a href="">muabanlinhtinh.com</a> </p>
            </div>
        </div>
    </div>
    <script type="text/javascript">
		$(document).ready(function() {
			/*
			var defaults = {
	  			containerID: 'toTop', // fading element id
				containerHoverID: 'toTopHover', // fading element hover id
				scrollSpeed: 1200,
				easingType: 'linear'
	 		};
			*/

			$().UItoTop({ easingType: 'easeOutQuart' });

		});
    </script>
    <a href="#" id="toTop" style="display: block;"><span id="toTopHover" style="opacity: 1;"></span></a>

  


    <link href="~/Assets/newlayout/css/flexslider.css" rel='stylesheet' type='text/css' />
    <script defer src="~/Assets/newlayout/js/jquery.flexslider.js"></script>


    <script type="text/javascript">
		$(function(){
			SyntaxHighlighter.all();
		});
		$(window).load(function(){
			$('.flexslider').flexslider({
			animation: "slide",
			start: function(slider){
				$('body').removeClass('loading');
			}
			});
		});
    </script>

    @RenderSection("jsFooter", required: false)
</body>
</html>
