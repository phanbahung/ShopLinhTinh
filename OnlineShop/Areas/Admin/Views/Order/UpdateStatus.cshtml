@model Model.EF.Order

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
   Cập nhật trạng thái đơn hàng
}

@section jsFooter{
  
}

@using (Html.BeginForm("UpdateStatus", "Order", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thông tin sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2">
                Mã đơn hàng
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                Mã khách hàng
            </div>
            <div class="col-md-10">
                   @Html.DisplayFor(model => model.CustomerID, null, new { htmlAttributes = new { @class = "form-control" } })
           </div>
       </div>

        <div class="form-group">
            <div class="col-md-2">
                Tên khách hàng
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.ShipName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ShipName, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
                <div class="col-md-2">
                Địa chỉ
                </div>
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.ShipAddress, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                Điện thoại
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.ShipMobile, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ShipMobile, "", new { @class = "text-danger" })
                </div>
            </div>


        <div class="form-group">
            <div class="col-md-2">
                Email
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.ShipEmail, null, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ShipEmail, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                Trạng thái đơn hàng
                <p>(True= Đã hoàn thành):</p> 
                <p>(False= Chưa hoàn thành):</p> 
                </div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Status, null, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>   

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a class="btn btn-danger" href="/Admin/Order/Index">Quay lại</a>
            </div>
        </div>
    </div>
}
